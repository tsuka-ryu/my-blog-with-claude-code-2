{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.mjs",
        "oxlint.json",
        ".prettierrc",
        ".prettierignore"
      ]
    },
    "format": {
      "dependsOn": ["^format"],
      "inputs": ["$TURBO_DEFAULT$", ".prettierrc", ".prettierignore"]
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "storybook": {
      "cache": false,
      "persistent": true
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static/**"]
    },
    "config:inspect": {
      "cache": false,
      "persistent": true
    },
    "config:build": {
      "inputs": ["eslint.config.mjs", "eslint.config.js", "eslint.config.ts"],
      "outputs": [".eslint-config-inspector/**"]
    },
    "doc": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", "vitest.config.ts", "vitest.setup.ts"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    }
  }
}
