{
  "$schema": "https://raw.githubusercontent.com/markuplint/markuplint/main/packages/%40markuplint/config-schema/schema.json",
  "extends": [],
  "specs": {
    "\\.(jsx|tsx)$": "@markuplint/react-spec"
  },
  "parser": {
    "\\.(jsx|tsx)$": "@markuplint/jsx-parser"
  },
  "rules": {
    "doctype": false,
    "required-h1": false,
    "landmark-roles": true,
    "permitted-contents": false,
    "required-attr": true,
    "invalid-attr": true,
    "attr-duplication": true,
    "character-reference": false,
    "deprecated-attr": true,
    "deprecated-element": true,
    "id-duplication": true,
    "permitted-role": true,
    "required-element": false,
    "wai-aria": false,
    "class-naming": false,
    "attr-equal-space-after": true,
    "attr-equal-space-before": true,
    "attr-spacing": true,
    "attr-value-quotes": true,
    "case-sensitive-attr-name": false,
    "case-sensitive-tag-name": true,
    "end-tag": true,
    "indentation": false,
    "ineffective-attr": false,
    "no-empty-palpable-content": false,
    "no-hard-code-id": false,
    "no-refer-to-non-existent-id": false,
    "placeholder-label-option": true,
    "require-accessible-name": true,
    "use-list": true
  },
  "nodeRules": [
    {
      "selector": "img",
      "rules": {
        "required-attr": ["alt"]
      }
    },
    {
      "selector": "a",
      "rules": {
        "require-accessible-name": true
      }
    },
    {
      "selector": "input[type=button], input[type=submit], input[type=reset], button",
      "rules": {
        "require-accessible-name": true
      }
    },
    {
      "selector": "span[role=status]",
      "rules": {
        "no-empty-palpable-content": false
      }
    }
  ],
  "childNodeRules": [
    {
      "selector": "head",
      "rules": {
        "required-element": ["title"]
      }
    }
  ],
  "excludeFiles": [
    "./node_modules/**/*",
    "./.next/**/*",
    "./dist/**/*",
    "./build/**/*",
    "./out/**/*",
    "./coverage/**/*",
    "./storybook-static/**/*",
    "./apps/docs/build/**/*"
  ]
}