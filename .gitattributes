# Set default behaviour for line endings
* text=auto

# Ensure these files are always normalized and converted to native line endings on checkout
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.md text eol=lf
*.mdx text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Ensure these files are not processed by Git LFS and are stored as-is
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary

# Ensure shell scripts have Unix line endings
*.sh text eol=lf

# Linguist overrides for better language detection
*.mdx linguist-language=Markdown
*.css linguist-vendored=false
*.scss linguist-vendored=false